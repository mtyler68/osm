<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.mattie.osm.app.viewcontrollers.MainViewController">
    <children>
        <fx:include source="MainToolbar.fxml" VBox.vgrow="NEVER" />
        <SplitPane dividerPositions="0.5" orientation="VERTICAL" VBox.vgrow="ALWAYS">
            <items>
                <SplitPane fx:id="topHSplitPane" dividerPositions="0.5">
                    <items>
                        <fx:include source="CueTableView.fxml" />
                        <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                            <items>
                                <AnchorPane>
                                    <children>
                                        <TitledPane animated="false" text="Notes" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <content>
                                                <fx:include source="NoteView.fxml" />
                                            </content>
                                        </TitledPane>
                                    </children>
                                </AnchorPane>
                                <AnchorPane>
                                    <children>
                                        <TitledPane animated="false" text="Media Playlist" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <content>
                                                <fx:include source="MediaPlaylistView.fxml" />
                                            </content>
                                        </TitledPane>
                                    </children>
                                </AnchorPane>
                            </items>
                        </SplitPane>
                    </items>
                </SplitPane>
                <SplitPane dividerPositions="0.29797979797979796, 0.5">
                    <items>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <TitledPane prefHeight="200.0" prefWidth="200.0" text="Media" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <content>
                                        <fx:include source="MediaScrubberListView.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                           </content>
                                </TitledPane>
                            </children>
                        </AnchorPane>
                        <AnchorPane>
                            <children>
                                <TitledPane animated="false" text="Script" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <content>
                                        <fx:include source="RichTextView.fxml" />
                                    </content>
                                </TitledPane>
                            </children>
                        </AnchorPane>
                        <fx:include source="HotKeyView.fxml" />
                    </items>
                </SplitPane>
            </items>
        </SplitPane>
        <AnchorPane prefHeight="30.0" VBox.vgrow="NEVER">
            <children>
                <HBox>
                    <children>
                        <Label text="Status:" />
                        <Label fx:id="statusLabel" text="WAITING">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</VBox>
