<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<HBox fx:id="root" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.mattie.osm.app.viewcontrollers.MediaScrubberViewController">
   <children>
      <StackPane HBox.hgrow="ALWAYS">
         <children>
            <AnchorPane>
               <children>
                  <ProgressBar fx:id="progressBar" progress="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
            <Label fx:id="label" blendMode="SRC_ATOP" focusTraversable="false" mouseTransparent="true" />
         </children>
      </StackPane>
      <Button fx:id="finishButton" focusTraversable="false" mnemonicParsing="false" text="Finish" />
      <SplitMenuButton fx:id="fadeSplitButton" focusTraversable="false" mnemonicParsing="false" text="Fade (5s)" />
   </children>
</HBox>
