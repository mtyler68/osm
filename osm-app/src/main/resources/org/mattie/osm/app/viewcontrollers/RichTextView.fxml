<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.mattie.osm.app.viewcontrollers.RichTextViewController">
   <children>
      <AnchorPane VBox.vgrow="NEVER">
