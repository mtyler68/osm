<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.ToolBar?>
<?import org.controlsfx.control.ToggleSwitch?>

<ToolBar xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.mattie.osm.app.viewcontrollers.MainToolbarController">
  <items>
      <Button fx:id="playPauseButton" focusTraversable="false" mnemonicParsing="false" text="Play/Pause" textFill="#0a861b" />
      <Button fx:id="stopButton" contentDisplay="CENTER" disable="true" focusTraversable="false" mnemonicParsing="false" text="Stop" />
      <Separator focusTraversable="false" orientation="VERTICAL" />
      <Button fx:id="nextCueButton" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" mnemonicParsing="false" text="Next Cue" />
      <Separator focusTraversable="false" orientation="VERTICAL" />
    <Button fx:id="openButton" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" mnemonicParsing="false" text="Open" />
      <Separator focusTraversable="false" orientation="VERTICAL" />
      <ToggleSwitch fx:id="dmxToggle" text="DMX" />
      <Button fx:id="allOnButton" mnemonicParsing="false" text="DMX All On" />
      <Button fx:id="allOffButton" mnemonicParsing="false" text="DMX All Off" />
      <Button fx:id="dmxConsoleButton" focusTraversable="false" mnemonicParsing="false" text="DMX Console" />
      <Separator focusTraversable="false" orientation="VERTICAL" />
      <SplitMenuButton fx:id="toggleScreenButton" focusTraversable="false" mnemonicParsing="false" text="Screen">
        <items>
          <MenuItem mnemonicParsing="false" text="Action 1" />
          <MenuItem mnemonicParsing="false" text="Action 2" />
        </items>
      </SplitMenuButton>
      <Button fx:id="fullscreenButton" focusTraversable="false" mnemonicParsing="false" text="Fullscreen" />
  </items>
</ToolBar>
